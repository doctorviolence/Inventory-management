<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0"
            prefWidth="350.0" stylesheets="@../css/master.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controllers.ExitController">
    <top>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
              prefHeight="120.0" prefWidth="350.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="label-title" text="Are you sure you wish to exit the application?">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Label>
                <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                      minWidth="-Infinity" prefHeight="30.0" prefWidth="300.0" spacing="10.0">
                    <children>
                        <Button fx:id="noButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                                minWidth="-Infinity" mnemonicParsing="false" prefHeight="23.0" prefWidth="100.0"
                                styleClass="button-red" text="No">
                            <font>
                                <Font name="System Bold" size="11.0"/>
                            </font>
                        </Button>
                        <Button fx:id="yesButton" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
                                minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="23.0"
                                prefWidth="100.0" styleClass="button-red" text="Yes">
                            <font>
                                <Font size="11.0"/>
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
</BorderPane>
